
{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "green",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "template": "{{ if .Root }}#{{ else }}➜{{ end }} "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "cyan",
          "properties": {
            "style": "folder"
          },
          "template": "<b>{{ .Path }}</b> "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "blue",
          "template": "git:(<red>{{ .HEAD }}</>){{ if or (.Working.Changed) (.Staging.Changed) }}<yellow> ✗</>{{ end }} "
        }
      ]
    }
  ]
}
